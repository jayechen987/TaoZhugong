@model TaoZhugong.Models.DbEntities.Dividends

@using (Html.BeginForm("AddDividends", "Transaction", FormMethod.Post, new { id = "AddDividendsForm" }))
{
    @Html.AntiForgeryToken()
    <div id="AlertMsg"></div>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductSeq)

        <div class="form-group">
            @Html.LabelFor(model => model.ExRightDate, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExRightDate, new { htmlAttributes = new { @class = "form-control", @type = "date", @Max = "2099-12-31" } })
                @Html.ValidationMessageFor(model => model.ExRightDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StockDividend, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StockDividend, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StockDividend, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CashDividends, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CashDividends, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CashDividends, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DividendDate, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DividendDate, new { htmlAttributes = new { @class = "form-control", @type = "date", @Max = "2099-12-31" } })
                @Html.ValidationMessageFor(model => model.DividendDate, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
}
